<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:gravity="center">

    <Button
        android:id="@+id/init_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="10pt"
        android:textStyle="italic"
        android:onClick="buttonClick"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/swap_frag" />
        <!--android:layout_marginTop="30dp" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log orientation"
        android:id="@+id/button_orientation"
        android:layout_below="@+id/init_button"
        android:layout_centerHorizontal="true"
        android:onClick="showOrienLog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-SWAP-"
        android:id="@+id/swap_frag"
        android:layout_below="@+id/button_orientation"
        android:layout_centerHorizontal="true"
        android:onClick="swapFrag"/>


    <FrameLayout
        android:id="@+id/frag_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/swap_frag"></FrameLayout>




</RelativeLayout>
